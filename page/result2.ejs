        <!-- 按鈕區塊 -->
        <div class="buttons-container">
            <!-- 步數統計按鈕 -->
            <button class="step-count" onclick="window.location.href='/steps'">步數統計</button>
            <!-- 測驗分數按鈕 -->
            <button class="test-score" onclick="window.location.href='/scores'">測驗分數</button>
            <!-- 分析結果按鈕 -->
            <button class="analysis-result" onclick="window.location.href='/analysis'">分析結果</button>
            <!-- 進階查詢按鈕 -->
            <button class="progress-check" onclick="window.location.href='/advanced_search'">進階查詢</button>

            <button class="goback" onclick="window.location.href='/index'">重新查詢</button>
        </div>
    </div>
    </div>

    <script>
        function goToSettings() {
            window.location.href = '/settings';
        }
    </script>
</body>
</html>