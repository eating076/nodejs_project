<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>親子同室問卷紀錄</title>
    <link rel="stylesheet" 
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, rgba(0, 123, 255, 0.1), rgba(0, 123, 255, 0.2)), 
                        url('https://via.placeholder.com/1500x1000/87CEFA/ffffff?text=Background+Image') no-repeat center center fixed;
            background-size: cover;
            font-family: 'DFKai-SB', '標楷體', DFKai-SB, serif;
            color: #333;
        }

        .container {
            margin-top: 50px;
            max-width: 90%;
            margin-left: auto;
            margin-right: auto;
        }

        /* 外層的白框，增加陰影和圓角 */
        .white-box {
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-bottom: 30px;
            overflow: hidden; /* 防止內容溢出白框 */
        }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            table-layout: fixed; /* 讓表格不會根據內容自動調整寬度 */
            word-break: break-word; /* 防止文字超出格子 */
        }

        .table th {
            background-color: #343a40;
            color: white;
        }

        .table td {
            vertical-align: middle;
        }

        .highlight {
            font-weight: bold;
            color: #d9534f; /* 顯示高疼痛等級 */
        }

        h2 {
            font-size: 30px;
            color: #4e73df;
            margin-bottom: 20px;
            font-weight: 700;
        }

        p {
            font-size: 18px;
            color: #333;
        }

        /* 新增的 hover 效果 */
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        /* 小螢幕樣式 */
        @media (max-width: 768px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }

            h2 {
                font-size: 24px;
            }

            .table th, .table td {
                font-size: 14px;
            }
        }

        /* 左右滾動條的樣式 */
        .table-responsive {
            overflow-x: auto;  /* 顯示左右滾動條 */
            overflow-y: hidden; /* 禁止上下滾動條 */
            -webkit-overflow-scrolling: touch; /* 平滑滾動效果 */
            max-height: 80vh; /* 最大高度，避免內容溢出 */
            margin-top: 20px;
        }

    </style>
</head>
<body>

<div class="container">
    <div class="white-box">
        <h2 class="text-center mb-4">親子同室量表紀錄</h2>

        <p><strong>ID：</strong> <%= userId || '未提供' %></p>
        <p><strong>名字：</strong> <%= user_name || '未提供' %></p>

        <script>
            console.log("🔍 EJS 前端收到的 userId:", "<%= userId %>");
        </script>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>欄位名稱</th>
                        <% roommateData.forEach((_, index) => { %>
                            <th>紀錄 <%= index + 1 %></th>
                        <% }); %>
                    </tr>
                </thead>
<tbody>
    <tr>
        <td>ID</td>
        <% roommateData.forEach(item => { %>
            <td><%= item.roommate_id %></td>
        <% }); %>
    </tr>
    <tr>
        <td>測驗量表</td>
        <% roommateData.forEach(item => { %>
            <td><%= item.roommate_question_content %></td>
        <% }); %>
    </tr>
    <tr>
        <td>測驗日期</td>
        <% roommateData.forEach(item => { %>
            <td>
                <%= new Date(item.roommate_test_date).toLocaleDateString('zh-TW', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                }) %>
            </td>
        <% }); %>
    </tr>

    <% const roommateQuestions = [
        "截至目前為止是否有24小時同室",
        "產後是否有住在月子中心"
    ]; %>

    <% roommateQuestions.forEach((question, index) => { %>
        <tr>
            <td><%= question %></td>
            <% roommateData.forEach(item => { %>
                <td><%= item[`roommate_answer_${index + 1}`] %></td>
            <% }); %>
        </tr>
    <% }); %>
</tbody>

            </table>
        </div>

        <a href="/result?user_id=<%= userId %>" class="btn btn-secondary mt-3">返回個人詳細資料</a>
    </div>
</div>

</body>
</html>
