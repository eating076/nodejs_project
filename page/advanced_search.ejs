    <script>
        function toggleContent(index) {
            const content = document.getElementById("content-" + index);
            const button = document.getElementById("toggle-btn-" + index);

            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "table-row";
                button.innerHTML = "▲";
            } else {
                content.style.display = "none";
                button.innerHTML = "▼";
            }
        }

        function editContent(index) {
    const content = document.getElementById("content-" + index);
    if (content.style.display === "none") {
        toggleContent(index);
    }

    const contentTd = content.querySelector("td");
    const strongTag = contentTd.querySelector("strong"); // 找到姓名部分
    const editButton = contentTd.querySelector(".edit-btn"); // 找到編輯按鈕

    // 取出姓名外的內容，去掉多餘空白
    let otherText = contentTd.innerHTML
        .replace(strongTag.outerHTML, "") // 移除姓名
        .replace(editButton.outerHTML, "") // 移除編輯按鈕
        .trim();

    // 把 <br> 轉換成換行符號，讓 textarea 正確顯示
    otherText = otherText.replace(/<br>/g, "\n");

    // 創建 textarea
    const textarea = document.createElement("textarea");
    textarea.value = otherText;
    textarea.style.width = "100%";
    textarea.style.height = "100px";
    textarea.style.fontSize = "14px";

    // 創建「確定」按鈕
    const saveButton = document.createElement("button");
    saveButton.innerText = "確定";
    saveButton.style.marginTop = "5px";
    saveButton.onclick = function () {
        let newText = textarea.value.trim(); // 去掉開頭結尾空格
        newText = newText.replace(/\n/g, "<br>"); // 保持換行，但不額外增加 <br>

        contentTd.innerHTML = `${strongTag.outerHTML}`; // 先加回姓名
        if (newText) {
            contentTd.innerHTML += `<br>${newText}`; // 只有當有內容時才加 <br>
        }
        contentTd.appendChild(document.createElement("br"));
        contentTd.appendChild(editButton); // 保持編輯按鈕
    };

    // 清空內容並加入編輯區
    contentTd.innerHTML = "";
    contentTd.appendChild(strongTag);
    contentTd.appendChild(document.createElement("br"));
    contentTd.appendChild(textarea);
    contentTd.appendChild(document.createElement("br"));
    contentTd.appendChild(saveButton);
}



