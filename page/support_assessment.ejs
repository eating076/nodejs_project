                    <tr>
                        <td>測驗日期</td>
                        <td id="testDate" class="bold-text">2024/12/01</td>
                    </tr>
                    <tr>
                        <td>測驗分數</td>
                        <td id="score" class="bold-text">72</td>
                    </tr>
                    <tr>
                        <td>是否需要進一步追蹤</td>
                        <td>
                            <div class="checkbox-group">
                                <input type="checkbox" id="yes">
                                <label for="yes">是</label>
                                <input type="checkbox" id="no">
                                <label for="no">否</label>
                            </div>
                        </td>
                    </tr>
                </table>
        
                <div class="buttons">
                    <button class="btn" onclick="prevPage()">前一頁</button>
                    <button class="btn" onclick="nextPage()">下一頁</button>
                </div>
            </div>
        
            <script>
                let testResults = [
                    { date: "2024-12-01", score: 72 },
                    { date: "2024-12-08", score: 77 },
                    { date: "2024-12-15", score: 58 }
                ];
        
                let currentIndex = 0;
        
                function updatePage() {
                    let testDateElement = document.getElementById("testDate");
                    let scoreElement = document.getElementById("score");
                    let yesCheckbox = document.getElementById("yes");
                    let noCheckbox = document.getElementById("no");
        
                    let result = testResults[currentIndex];
        
                    testDateElement.innerText = result.date;
                    scoreElement.innerText = result.score;
        
                    if (result.score <= 60) {
                        scoreElement.classList.add("red-text");
                        yesCheckbox.checked = true;
                        noCheckbox.checked = false;
                    } else {
                        scoreElement.classList.remove("red-text");
                        yesCheckbox.checked = false;
                        noCheckbox.checked = true;
                    }
                }
        
                function prevPage() {
                    if (currentIndex > 0) {
                        currentIndex--;
                        updatePage();
                    }
                }
        
                function nextPage() {
                    if (currentIndex < testResults.length - 1) {
                        currentIndex++;
                        updatePage();
                    }
                }
        
                function searchByDate() {
                    let searchDate = document.getElementById("searchDate").value;
        
                    // 查找符合日期的結果
                    let index = testResults.findIndex(result => result.date === searchDate);
                    if (index !== -1) {
                        currentIndex = index;
                        updatePage();
                    } else {
                        alert("找不到符合的日期！");
                    }
                }
        
                window.onload = updatePage;
            </script>
