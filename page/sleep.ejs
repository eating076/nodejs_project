    <script>
        let currentPage = 0;
        const records = document.querySelectorAll('.sleep-record');
        const sleepDisorderYes = document.getElementById('sleepDisorderYes');
        const sleepDisorderNo = document.getElementById('sleepDisorderNo');

        function showPage(pageIndex) {
            // 隱藏所有資料
            records.forEach((record, index) => {
                record.style.display = index === pageIndex ? 'block' : 'none';
            });

            // 獲取該頁面的總分
            const totalScore = parseInt(records[pageIndex].getAttribute('data-score'), 10);
            
            // 根據總分設置框框的狀態
            if (totalScore < 10) {
                sleepDisorderYes.checked = true;
                sleepDisorderNo.checked = false;
            } else {
                sleepDisorderYes.checked = false;
                sleepDisorderNo.checked = true;
            }
        }

        function nextPage() {
            if (currentPage < records.length - 1) {
                currentPage++;
                showPage(currentPage);
            }
        }

        function prevPage() {
            if (currentPage > 0) {
                currentPage--;
                showPage(currentPage);
            }
        }

        function goBack() {
            window.location.href = '/scores'; // 返回測驗分數頁面
