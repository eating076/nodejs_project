<body>
    <div class="container">
        <h2>疼痛量表</h2>
        <p class="info"> 患者 ID: 123456</p>
        <div class="form-group">
            <label>姓名：</label>
            <input type="text" id="name" readonly>
        </div>
        <div class="form-group">
            <label>生產方式：</label>
            <br><br>
            <div class="checkbox-group">
                <label><input type="checkbox" id="natural" disabled> 自然產</label>
                <label><input type="checkbox" id="cesarean" disabled> 剖腹產</label>
            </div>
        </div>
        <div class="form-group">
            <label>疼痛指數：</label>
            <div class="slider-container">
                <input type="range" min="0" max="10" value="5" id="painSlider" disabled>
                <div class="value-display" id="painValue">5</div>
                <div class="character" id="character" style="left: 50%;">&#128578;</div>
            </div>
        </div>
        <div class="form-group">
            <label>是否有使用自控式止痛：</label>
            <label><input type="checkbox" id="yesControl" disabled> 是</label>
            <label><input type="checkbox" id="noControl" disabled> 否</label>
        </div>
        <div class="buttons">
            <button class="btn btn-secondary" onclick="prevPage()">上一頁</button>
            <button class="btn btn-secondary" onclick="nextPage()">下一頁</button>
        </div>
        <a href="settings.html" class="settings-icon">
            <i class="fas fa-cog"></i>
        </a>
    </div>

    <script>
        const data = [
            { name: "蔡昆佑", mode: "自然產", pain: 7, control: "是" },
            { name: "蔡昆佑", mode: "自然產", pain: 10, control: "是" },
            { name: "蔡昆佑", mode: "自然產", pain: 5, control: "是" },
            { name: "蔡昆佑", mode: "自然產", pain: 3, control: "否" }
        ];

        let currentIndex = 0;

        function updateForm() {
            const currentData = data[currentIndex];
            document.getElementById('name').value = currentData.name;
            document.getElementById('natural').checked = (currentData.mode === "自然產");
            document.getElementById('cesarean').checked = (currentData.mode === "剖腹產");
            document.getElementById('painSlider').value = currentData.pain;
            document.getElementById('painValue').textContent = currentData.pain;

            // 更新小人位置及顏色
            const percentage = (currentData.pain / 10) * 100;
            const character = document.getElementById('character');
            character.style.left = `calc(${percentage}% - 15px)`;

            if (currentData.pain <= 4) {
                character.className = 'character green';
                character.innerHTML = '&#128578;'; // 😊 笑臉
            } else if (currentData.pain <= 6) {
                character.className = 'character orange';
                character.innerHTML = '&#128528;'; // 😐 平淡
            } else if (currentData.pain <= 9) {
                character.className = 'character red';
                character.innerHTML = '&#128577;'; // ☹️ 難過
            } else {
                character.className = 'character red';
                character.innerHTML = '&#128557;'; // 😭 哭臉
            }

            document.getElementById('yesControl').checked = (currentData.control === "是");
            document.getElementById('noControl').checked = (currentData.control === "否");
        }

        function nextPage() {
            if (currentIndex < data.length - 1) {
                currentIndex++;
                updateForm();
            }
        }

        function prevPage() {
            if (currentIndex > 0) {
                currentIndex--;
                updateForm();
            }
        }

        function goBack() {
            window.location.href = '/scores'; // 返回測驗分數頁面
        }

        // 讓表情可以被拖曳
        const character = document.getElementById('character');
        const slider = document.getElementById('painSlider');
        const painValue = document.getElementById('painValue');

        let isDragging = false;

        character.addEventListener('mousedown', (e) => {
            isDragging = true;
            const sliderRect = slider.getBoundingClientRect();
            const offsetX = e.clientX - sliderRect.left;
            const percentage = Math.min(Math.max(offsetX / sliderRect.width, 0), 1);
            const newPain = Math.round(percentage * 10);
            updateCharacterPosition(newPain);
        });

        document.addEventListener('mousemove', (e) => {
            if (isDragging) {
                const sliderRect = slider.getBoundingClientRect();
                const offsetX = e.clientX - sliderRect.left;
                const percentage = Math.min(Math.max(offsetX / sliderRect.width, 0), 1);
                const newPain = Math.round(percentage * 10);
                updateCharacterPosition(newPain);
            }
        });

        document.addEventListener('mouseup', () => {
            isDragging = false;
        });

        function updateCharacterPosition(painLevel) {
            slider.value = painLevel;
            painValue.textContent = painLevel;

            // 更新小人位置
            const percentage = (painLevel / 10) * 100;
            character.style.left = `calc(${percentage}% - 15px)`;

            // 更新表情
            updateCharacterAppearance(painLevel);
        }

        function updateCharacterAppearance(painLevel) {
            const character = document.getElementById('character');
            if (painLevel <= 4) {
                character.className = 'character green';
                character.innerHTML = '&#128578;'; // 😊 笑臉
            } else if (painLevel <= 6) {
                character.className = 'character orange';
                character.innerHTML = '&#128528;'; // 😐 平淡
            } else if (painLevel <= 9) {
                character.className = 'character red';
                character.innerHTML = '&#128577;'; // ☹️ 難過
            } else {
                character.className = 'character red';
                character.innerHTML = '&#128557;'; // 😭 哭臉
            }
        }

        // 初始化頁面
        updateForm();
    </script>
